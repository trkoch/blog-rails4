<h1>Listing posts</h1>

<table class="posts">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="title"><%= post.title %></td>
        <td class="body"><%= post.excerpt %></td>
        <td class="published"><%= post.published %></td>
        <td><%= link_to 'Show', [:blog, post] %></td>
        <td><%= link_to 'Edit', edit_blog_post_path(post) %></td>
        <td><%= link_to 'Destroy', [:blog, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_blog_post_path %>
